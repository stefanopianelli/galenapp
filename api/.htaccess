# Impedisce il listing dei file nelle cartelle
Options -Indexes

# Protezione globale: nega l'accesso a tutti i file per impostazione predefinita
<FilesMatch "\.(php|sql|env|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Eccezione: Permetti l'accesso solo al file api.php (necessario per il frontend)
<Files "api.php">
    Order allow,deny
    Allow from all
</Files>

